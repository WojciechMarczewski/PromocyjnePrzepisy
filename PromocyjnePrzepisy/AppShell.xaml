<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PromocyjnePrzepisy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PromocyjnePrzepisy"
    xmlns:views="clr-namespace:PromocyjnePrzepisy.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PromocyjnePrzepisy" Background="Transparent"
    >

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        />
    <ShellContent 
    ContentTemplate="{DataTemplate views:RecipePage}" 
    Route="RecipePage" />
   
    <Shell.TitleView  >
        
        <Grid ColumnDefinitions="40, *, 40"  Background="{StaticResource TitleViewBrush}" >
            <Label Grid.Column="0"/>
            <Label Grid.Column="1" Text="Promocyjne Przepisy" HorizontalOptions="Center" VerticalOptions="Center" FontSize="30"/>
            <ImageButton  HeightRequest="40"
                    WidthRequest="40" Grid.Column ="2"  HorizontalOptions="End" VerticalOptions="CenterAndExpand" Margin="0, 4, 2, 0">
                <ImageButton.Source>
                    <FileImageSource File="./Resources/Images/menu.png" />
                </ImageButton.Source>
            </ImageButton>
        </Grid>
        
    </Shell.TitleView>
    

</Shell>
