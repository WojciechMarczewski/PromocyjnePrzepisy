<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PromocyjnePrzepisy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PromocyjnePrzepisy"
    xmlns:views="clr-namespace:PromocyjnePrzepisy.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="PromocyjnePrzepisy" Background="Transparent"  NavigationPage.HasNavigationBar="False" 
    NavigationPage.HasBackButton="False" FlyoutBackgroundColor ="{StaticResource TransparentWhite}"
    
    >
    

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        />
    <ShellContent 
    ContentTemplate="{DataTemplate views:RecipePage}" 
    Route="RecipePage" />

    <ShellContent ContentTemplate="{DataTemplate views:ProductPage}" Route="ProductPage" />
    <MenuItem Text="Strona Główna" IconImageSource="./Resources/Images/home_icon.png">
       
    </MenuItem>
    <MenuItem Text="Lista Zakupów" IconImageSource="./Resources/Images/list_icon.png">
     
    </MenuItem>
    <MenuItem Text="Wyszukiwarka" IconImageSource="./Resources/Images/search_icon.png">
    </MenuItem>
    <MenuItem Text="Pomoc i Opinie" IconImageSource="./Resources/Images/help_icon.png">
       
    </MenuItem>
    <MenuItem Text=""/>
    <MenuItem Text="Zamknij" IconImageSource="./Resources/Images/close_icon.png"/>



</Shell>
